{
  "name": "deplomator",
  "version": "0.0.1",
  "description": "frontend for deplomator",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "elm-app start",
    "css:build": "node-sass-chokidar --include-path ./src/styles --include-path ./node_modules src/styles/ -o src/styles/",
    "css:watch": "npm run css:build && node-sass-chokidar --include-path ./src/styles --include-path ./node_modules src/styles/ -o src/styles/ --watch --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LizHacks/deplomator.git"
  },
  "keywords": [
    "elm",
    "deployment",
    "CI",
    "integration"
  ],
  "author": "LizHacks team",
  "bugs": {
    "url": "https://github.com/LizHacks/deplomator/issues"
  },
  "homepage": "https://github.com/LizHacks/deplomator#readme",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "basscss": "^8.0.10",
    "bulma": "^0.7.2",
    "node-sass-chokidar": "^1.3.4"
  },
  "devDependencies": {
    "create-elm-app": "^2.2.3"
  }
}
